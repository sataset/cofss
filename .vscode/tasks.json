{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "runner": "terminal",
    "tasks": [
        {
            "taskName": "Build Experiment",
            "command": "g++-7",
            "isShellCommand": true,
            "args": [
                "-O3",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-std=c++11",
                "-Isrc",
                "main.cpp",
                "src/core/*.cpp",
                "src/modules/*.cpp",
                "src/utility.cpp",
                "-lfftw3",
                "-omain.o"
            ],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Run Experiment",
            "command": "./main.o",
            "isShellCommand": true,
            "args": [
                "1"
            ]
        },

        {
            "taskName": "Build Debug",
            "command": "g++-7",
            "isShellCommand": true,
            "args": [
                "-O3",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-std=c++11",
                "-Isrc",
                "tests/debug.cpp",
                "src/core/*.cpp",
                "src/modules/*.cpp",
                "src/utility.cpp",
                "-lfftw3",
                "-otests/debug.o"
            ],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Run Debug",
            "command": "./tests/debug.o",
            "isShellCommand": true,
            "args": [
                "1"
            ]
        }
    ]
}