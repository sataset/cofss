{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "Build Experiment",
            "command": "g++",
            "isShellCommand": true,
            "args": [
                "-O3",
                "-Wall",
                "-Wextra",
                "-Wshadow",
                "-std=c++11",
                "-Iinclude",
                "tests/main.cpp",
                //"src/core/executor.cpp",
                "src/core/system.cpp",
                "src/core/field.cpp",
                "src/core/module.cpp",
                "src/utility.cpp",
                "src/modules/counter.cpp",
                "src/modules/coupler.cpp",
                "src/modules/logger.cpp",
                "src/modules/fiber.cpp",
                "src/modules/dwnt.cpp",
                "src/modules/active_fiber.cpp",
                "src/modules/hwp_qwp.cpp",
                "src/modules/pd_iso.cpp",
                "src/modules/amplifier_simple.cpp",
                "-lfftw3",
                "-otests/main.out"
            ],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Run Experiment",
            "command": "./tests/main.out",
            "isShellCommand": true,
            "args": [
                "1"
            ]
        }
    ]
}